extends game

append head
    link(rel='stylesheet', href='/stylesheets/snake/snake.css')
    link(rel='stylesheet', href='/stylesheets/snake/menu.css')
    link(rel='stylesheet', href='/stylesheets/snake/instruction.css')
    link(rel='stylesheet', href='/stylesheets/snake/pause-view.css')
    script(src="/javascripts/snake/game.js" type="module")

block game
    div(class="game-holder")
        div(class="top-panel")
            div(class="box box--green message")
                span(class="message__content")
            div(class="box box--green score")
                span(class="score__content") 0
            div(class="box box--green score")
                span(class="counter__content") 0:00
        div(class="game-container")
            canvas(class="game__canvas")
            div(class="view-container")
                div(class="menu")
                    button(id="menu__go-to-instruction" class="menu__item menu__item--primary") Instrukcja
                    button(class="menu__item menu__item--primary play-bttn") Graj
                div(class="pause-view pause-view--light hidden")
                    div(class="pause-view__text") pauza
                div(class="instruction hidden")
                    div(class="instruction__controls instruction__column")
                        div(class="instruction__element")
                            span(class="instruction__highlight") Koniec gry
                            |
                            | następuje w momencie zderzenia głowy węża z ogonem.
                        div(class="instruction__element")
                            h4(class="instruction__highlight") Kontrola
                            div(class="instruction__keyboard-usage")
                                figure(class="instruction__keyboard-usage__element")
                                    img(alt="strzałki" src="/images/snake/arrow-keys.png")
                                    figcaption() sterowanie
                                figure(class="instruction__keyboard-usage__element")
                                    img(alt="P" src="/images/snake/p-key.png")
                                    figcaption() pauza/start
                        div(class="instruction__element")
                            span(class="instruction__highlight") Zdobywaj punkty
                            |
                            | za zjadanie ciasteczek
                            |
                            img(class="inline-img" src="/images/snake/cookie.png")
                            |.
                        div(class="instruction__element")
                            span(class="instruction__highlight") Uważaj 
                            |na ogień 
                            | 
                            img(class="inline-img" alt="ogień" src="/images/snake/fire.png") 
                            |
                            |! Jeśli zderzysz się z nim, wąż wydłuży się o 5.
                    div(class="instruction__events instruction__column")
                        div(class="instruction__element") 
                            span(class="instruction__highlight") Wykonuj 
                            |zadania, aby skrócić węża o 3:
                            ol(class="instruction__list")
                                li() 
                                    h5(class="instruction__highlight") Zapamiętaj kolor
                                    p W losowym miejscu pojawi się na chwilę koło - zapamiętaj jego kolor! Następnie w losowych miejscach pojawi się kilka kolorowych kół oznaczonych cyframi - masz 3s na wybranie na klawiaturze cyfry koła o zapamiętanym kolorze.
                                li() 
                                    h5(class="instruction__highlight") Skręć jak karzą
                                    p U góry ekranu pojawi się komenda, aby skręcić w lewo/prawo/górę/dół określoną liczbę razy - zapamiętaj ją! Zaraz potem zacznie się odliczanie czasu do końca zadania - masz 15s na skręcenie wężem zgodnie z instrukcją.
                                li() 
                                    h5(class="instruction__highlight") Zauważ literę
                                    p W losowym miejscu ekranu pojawi się na chwilę blękitny prostokąt. To znak, że w tym miescu zaraz pojawi się litera - masz 3s na wybieranie tej litery na klawiaturze.

                    div(class="instruction__footer")
                        button(id="instruction__go-to-menu" class="instruction__bttn menu__item--primary") Powrót



            span(class="letter")
            span(class="choose-object hidden")
            span(class="choose-object hidden")
            span(class="choose-object hidden")
            span(class="choose-object hidden")
            span(class="choose-object hidden")

            img(class="game__image food-image hidden" src="/images/snake/cookie.png")
            img(class="game__image obstacle-image hidden" src="/images/snake/fire.png")
            img(class="game__image snake-part-image hidden" src="/images/snake/snake-part.png")
            img(class="game__image snake-head-image hidden" src="/images/snake/snake-head.png")


